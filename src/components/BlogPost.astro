---
const { title, url } = Astro.props;
---
<li>
  <a href={url}>{title}</a>
</li>

<style>
li {
  list-style: none;
}

a {
  color: rgb(24, 72, 128);
  text-decoration: none;
  font-weight: 600;
  border: 1px solid #e2e2e2;
  border-radius: 12px;
  padding: 1rem 1.5rem;
  display: block;
  transition: background 0.2s ease, transform 0.1s ease;
}

a:hover {
  background: #f8f8f8;
  transform: translateY(-2px);
}
</style>
